<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bytedance.sjtu.shop.MenuActivity">

    <Button
        android:id="@+id/button_discount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神秘商城折扣1"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/button_discount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神秘商城折扣2"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_discount1"
        />

    <Button
        android:id="@+id/button_discount3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神秘商城折扣3"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_discount2"
        />

    <Button
        android:id="@+id/app_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神秘商城介绍"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>